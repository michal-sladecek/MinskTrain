.level-icon
    height 10%
    background-color #464545
    display: flex
    flex-direction: column
    align-items center
    justify-content center
    margin 10px
    border-radius: 10
    height 150px
    width 250px
    color white
    flex-wrap wrap
    &:hover
        background-color #565555
.levels-grid
    display: flex
    flex-direction: column
    align-items center
    justify-content center
.Train
    height 100px
    

.ToolBox
    width 100%
    margin 0 auto
    height 600px
    padding-left: 10%

.LevelDescription
    width 100%
    height 600px
    margin 0 auto

.not-implemented
    text-align center
    border 1px solid red
    background-color: yellow
    height: 100%
    width: 100%
    margin 0 auto

.Carriage
    width 90px 
    height 110px
    background-image: url('/static/img/carriage.jpg')
    background-size: 90px 110px;
    background-repeat: no-repeat;
    text-align center
    cursor pointer
    input
        text-align center
.Locomotive
    background-image: url('/static/img/locomotive.jpg')
    background-size: 130px 110px;
    width 130px
    height 110px
.Tile
    width 42px
    height 42px
    border 1px solid darkgreen
    background-color: lightgreen
    float left
.TileRow
    float right
    padding-right: 42px
.LastTileRow
    float right
    padding-right: 0px
.Hint
    display block
.currentTool
    border 2px solid red

.ToolIcon
    float right
    width 41px
    height 41px
    border: 2px solid green
    cursor: pointer
.dropdown-menu
    position relative
    min-width: 41px
.animationSvg
    padding-right 40px
    position absolute
    right: 0px
    z-index: 1
    pointer-events: none
    svg 
        background none
    margin-left: auto; 
    margin-right: auto;

.grid 
    position absolute
    z-index 0
    margin-left: auto; 
    margin-right: auto;
svg 
    background-color: lightgreen
    pointer-events: none

.ToolIcon
    a
        height 40px
        width 40px
        font-size: 40px
.clear  
    clear both
    height 630px
    width  840px
.GameGrid
    margin 0 auto

.App
    margin-top 50px

.trainBeg
    width 42px
    height 42px
    border 1px solid darkgreen
    float left
    background-color: lightgreen
.trainEnd
    width 42px
    height 42px
    border 1px solid darkgreen
    float left
    background-color: lightgreen

input
    width 600px